{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*",
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "src/types",
            "../shared/types"
        ]
    },
    "include": [
        "./src/**/*",
    ]
}